{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "./build",
    "strict": true,
    "lib": ["es2017", "dom"],
    "sourceMap": true
  },
  "includes": [
    "src/**/*.ts"
  ],
  "exclude": [
    "app",
    "node_modules",
    "src/**/*.spec.ts",
    "**/*.d.ts",
    "typings"
  ]
}
